include ../../detail-link/detail-link

mixin news-preview-simple-card(data)
  .news-preview-card.news-preview-card--bordered
    span.base-text.base-text--muted!= data.author.date

    span.base-text.base-text--lg.news-preview-card__title!= data.title
    span.base-text.news-preview-card__text!= data.text

    +detail-link({
      text: 'Подробнее'
    })
