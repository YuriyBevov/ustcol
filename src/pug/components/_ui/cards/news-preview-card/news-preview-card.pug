include ../../detail-link/detail-link

mixin news-preview-card(data)
  .news-preview-card
    img(src=`./assets/img/${data.img.path}.png` alt= data.title width="600" height="400")

    span.base-text.base-text--lg.news-preview-card__title!= data.title
    span.base-text.news-preview-card__text!= data.text

    +detail-link({
      text: 'Читать далее'
    })
