mixin accordeon(data)
  .accordeon
    each item in data
      .accordeon-item(class= item.cls ? item.cls : null)
        .accordeon-header
          span.base-text!= item.header
          svg(width='24' height='24' role='img' aria-hidden='true' focusable='false')
            use(xlink:href='./__spritemap#sprite-icon-plus')
        .accordeon-content!= item.content

